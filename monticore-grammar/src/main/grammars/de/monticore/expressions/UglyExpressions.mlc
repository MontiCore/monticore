package de.monticore.expressions;

mlc UglyExpressions {

  //export the grammar
  export "$projectDir/src/main/grammars" {
    include "de/monticore/expressions/UglyExpressions.mc4";
  }

  // export all Java files generated from the grammar
  export "$projectDir/target/generated-sources/monticore/sourcecode" {
    include "de/monticore/expressions/uglyexpressions/**.java";
  }

  // export the prettyprinter
  export "$projectDir/src/main/java" {
    include "de/monticore/expressions/prettyprint/UglyExpressions*.java";
    include "de/monticore/expressions/exptojava/UglyExpressions*.java";
    include "de/monticore/types/check/DeriveSymTypeOfUglyExpressions.java";
  }

  promote {
    mlc "de.monticore.expressions.ExpressionsBasis";
    mlc "de.monticore.types.MCBasicTypes";
  }
}
