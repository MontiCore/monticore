component grammar IAutomatonComp extends de.monticore.MCBasics {

  Automaton =
    "automaton" Name "{" (State | Transition)* "}" ;

  external Invariant;

  State = "state" Name
    Invariant ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )* ";" ;

  Transition =
    from:Name "-" input:Name ">" to:Name ";" ;
}