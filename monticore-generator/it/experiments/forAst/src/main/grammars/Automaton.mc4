grammar Automaton {
  Automaton = "automaton" Name
    "{" ( State | Transition )* "}" ;
  State = "state" Name
    ("<<" ["initial"] ">>" | "<<" ["final"] ">>" )* ";" ;
  Transition = from:Name "-" input:Name ">" to:Name ";" ;
  astrule State =
    reachableStates:State*;

  Name = "...";
}

