
grammar AutomatonEMF  {

Automaton =
  "automaton" Name "{" (State | Transition)* "}" ;

State = "state" Name
  ( ["initial"] |  ["final"] )*
  ( ("{" (State | Transition)* "}") | ";") ;

Transition =
  from:Name "-" input:Name ">" to:Name ";" ;
  
token Name =
  ( 'a'..'z' | 'A'..'Z' | '_' | '$' )( 'a'..'z' | 'A'..'Z' | '_' | '0'..'9' | '$' )*;

  
}
