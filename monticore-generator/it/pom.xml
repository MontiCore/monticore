<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>de.monticore</groupId>
    <artifactId>monticore</artifactId>
    <version>5.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>monticore-generator-it</artifactId>

  <name>MontiCore Generator Main Integration Test</name>
  <description>Responsible MB/GV</description>

  <!-- == DEPENDENCIES ==================================================== -->

  <dependencies>
    <dependency>
      <groupId>de.se_rwth.commons</groupId>
      <artifactId>se-commons-logging</artifactId>
    </dependency>
    <dependency>
      <groupId>de.monticore</groupId>
      <artifactId>monticore-runtime</artifactId>
    </dependency>
    <dependency>
      <groupId>de.monticore</groupId>
      <artifactId>monticore-generator</artifactId>
    </dependency>
    <dependency>
      <groupId>de.monticore</groupId>
      <artifactId>monticore-grammar</artifactId>
    </dependency>
    <dependency>
      <groupId>de.monticore</groupId>
      <artifactId>javaDSL</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all</artifactId>
      <version>2.0.7</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <!-- Create grammars jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>

      <!-- Source plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ast</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <!-- MontiCore plugin -->
          <plugin>
            <groupId>de.monticore.mojo</groupId>
            <artifactId>monticore-maven-plugin</artifactId>
            <version>5.0.0</version><!--$NO-MVN-MAN-VER$ -->
            <executions>
              <execution>
                <id>it-python</id>
                <configuration>
                  <skip>false</skip>
                  <grammars>
                    <grammar>src/main/grammars/mc/feature/python3/PythonAutomaton.mc4</grammar>
                  </grammars>
                  <modelPaths>
                    <modelPath>src/main/grammars</modelPath>
                  </modelPaths>
                  <handcodedPaths>
                    <handcodedPath>src/main/java</handcodedPath>
                  </handcodedPaths>
                  <script>it-python.groovy</script>
                </configuration>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
              <execution>
                <configuration>
                  <skip>false</skip>
                  <modelPaths>
                    <modelPath>src/main/grammars</modelPath>
                  </modelPaths>
                  <handcodedPaths>
                    <handcodedPath>src/main/java</handcodedPath>
                  </handcodedPaths>
                  <script>it.groovy</script>
                </configuration>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>emf-it-tests</id>
      <dependencies>
        <dependency>
          <groupId>de.monticore</groupId>
          <artifactId>monticore-emf-runtime</artifactId>
        </dependency>

        <!-- EMF dependencies -->
        <dependency>
          <groupId>org.mod4j.org.eclipse.emf</groupId>
          <artifactId>ecore</artifactId>
        </dependency>
        <dependency>
          <groupId>org.mod4j.org.eclipse.emf.ecore</groupId>
          <artifactId>xmi</artifactId>
        </dependency>
        <dependency>
          <groupId>org.mod4j.org.eclipse.emf</groupId>
          <artifactId>common</artifactId>
        </dependency>
        <dependency>
          <groupId>org.eclipse.emf</groupId>
          <artifactId>org.eclipse.emf.compare</artifactId>
        </dependency>
        <dependency>
          <groupId>org.eclipse.emf</groupId>
          <artifactId>org.eclipse.emf.compare.match</artifactId>
        </dependency>
        <dependency>
          <groupId>org.eclipse.emf</groupId>
          <artifactId>org.eclipse.emf.compare.diff</artifactId>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>de.monticore.mojo</groupId>
            <artifactId>monticore-maven-plugin</artifactId>
            <version>5.0.0</version><!--$NO-MVN-MAN-VER$ -->
            <executions>
              <execution>
                <id>it-python</id>
                <configuration>
                  <skip>false</skip>
                  <grammars>
                    <grammar>src/main/grammars/mc/feature/python3/PythonAutomaton.mc4</grammar>
                  </grammars>
                  <modelPaths>
                    <modelPath>src/main/grammars</modelPath>
                  </modelPaths>
                  <handcodedPaths>
                    <handcodedPath>src/main/java</handcodedPath>
                  </handcodedPaths>
                  <script>it-python.groovy</script>
                </configuration>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
              <execution>
                <id>test-emf</id>
                <configuration>
                  <skip>false</skip>
                  <modelPaths>
                    <modelPath>src/main/grammars</modelPath>
                  </modelPaths>
                  <handcodedPaths>
                    <handcodedPath>src/main/java</handcodedPath>
                  </handcodedPaths>
                  <script>it-emf.groovy</script>
                </configuration>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>3.0.0</version>
            <executions>
              <execution>
                <id>add-emf-sources</id>
                <phase>generate-test-sources</phase>
                <goals>
                  <goal>add-test-source</goal>
                </goals>
                <configuration>
                  <sources>
                    <source>src/test_emf/java</source>
                  </sources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>
</project>
