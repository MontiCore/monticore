package mc.common; 

grammar Basics {
 
  token Name =
        ( 'a'..'z' | 'A'..'Z' | '_' | '$' )( 'a'..'z' | 'A'..'Z' | '_' | '0'..'9' | '$' )*;
  
  fragment token NEWLINE =
    ('\r' '\n' |
    '\r' |
    '\n' ):
  ;

  token WS =
    (' ' | 
    '\t' |
     '\r' '\n' |
    '\r' |
    '\n' ) : -> skip;
    
  token SL_COMMENT =
    "//" (~('\n' |
      '\r' )
    )*
    : -> channel(HIDDEN)
  ;

  token ML_COMMENT =
    "/*" ({_input.LA(2) != '/'}?'*' |
     NEWLINE |
      ~('*' |
      '\n' |
      '\r' )
    )*
    "*/" : -> channel(HIDDEN)
  ;

  fragment token ESC =
    '\\' ('n' |
    'r' |
    't' |
    '"' |
    '\\' );

token STRING =
    '"' ( ESC |
      ~('"' |
      '\\' |
      '\n' |
      '\r' )
    )*
'"': {setText(getText().substring(1, getText().length() - 1));};

MCImportStatement = "import" import:Name& ( "." import:Name&)* ("." Star:["*"])? ";" ;
     
}
